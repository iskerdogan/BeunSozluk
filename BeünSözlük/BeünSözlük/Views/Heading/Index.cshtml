@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color = "badge badge-default";
    string statusColor = "";
    string status = "";
    string caseByName = "";
    string caseByColor = "";
    string caseByIcon = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <br />
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlıklar</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Category.CategoryName == "Dizi")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Category.CategoryName == "Eğitim")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Category.CategoryName == "Gezi")
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.HeadingStatus == false)
                            {
                                status = "Pasif";
                                statusColor = "text-danger";
                                caseByName = "Aktif Yap";
                                caseByColor = "btn-success";
                                caseByIcon = "fa-check";
                            }
                            if (item.HeadingStatus == true)
                            {
                                status = "Aktif";
                                statusColor = "text-success";
                                caseByName = "Pasif Yap";
                                caseByColor = "btn-danger";
                                caseByIcon = "fa-trash";
                            }
                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImage">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <p class="@statusColor">@status</p>
                                </td>
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        İçerik
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn @caseByColor btn-sm" href="/Heading/DeleteHeading/@item.HeadingId">
                                        <i class="fas @caseByIcon">
                                        </i>
                                        @caseByName
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>
<a href="/Heading/AddHeading/" class="btn btn-info">Başlık Ekle</a>



