@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Başlık Güncelleme</h2>
@using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingId)
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.valueCategory, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingId)
        <br />
        @Html.Label("Başlık Tarihi")
        @Html.TextBoxFor(x => x.HeadingDate, new { @class = "form-control", @readonly = "readonly" })
        @Html.ValidationMessageFor(x => x.HeadingDate)
        <br />
        @Html.Label("Yazar Id")
        @Html.TextBoxFor(x => x.WriterId, new { @class = "form-control",@readonly = "readonly"})
        @Html.ValidationMessageFor(x => x.WriterId)
        <br />
        <button class="btn btn-success">Güncelle</button>

    </div>
}


