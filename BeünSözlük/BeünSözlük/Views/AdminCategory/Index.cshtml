@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Ad</th>
        <th>Kategori Açıklama</th>
        <th>Kategori Sil</th>
        <th>Kategori Güncelle</th>
        <th>Kategori Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName </td>
            <td>@item.CategoryDescription</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
            
        </tr>
    }

</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori Ekle</a>

